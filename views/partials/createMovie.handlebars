<div class="container justify-content-center">
    <div class="row">
        <h1>Create a movie</h1>
    </div>
    <form action="/movies" method="POST" id="movieForm">
        <div class="mb-3">
            <label id="labelMovieTitle" class="form-label">
                Title of Movie
                <input class="form-control" type="text" name="title" id="movieTitleInput" placeholder="Movie Title" />
            </label>
        </div>
        <div class="mb-3">
            <label id="labelMovieDescription" class="form-label">
                Description of Movie
                <textarea class="form-control" type="text" name="description" id="movieDescriptionInput"
                    rows="3"></textarea>
            </label>
        </div>
        <div class="mb-3">
            <label class="form-label" id="labelMovieBudget">
                Budget
                <input class="form-control" type="number" name="budget" id="movieBudgetInput" />
            </label>
        </div>
        <div class="mb-3">
            <label id="labelMovieImage" class="form-label">
                Choose image from assets folder
                <input class="form-control" type="file" name="image" id="movieImageInput" />
            </label>
        </div>
        <div class="mb-3">
            <label id="labelMovieGenres" class="form-label">
                Select Movie Genres
                <select class="form-select" multiple name="genres" id="movieGenresInput" aria-label="genres">
                    <option selected disabled>Choose the genres of the movie</option>
                    <option value="Adventure">Adventure</option>
                    <option value="Action">Action</option>
                    <option value="Drama">Drama</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Thriller">Thriller</option>
                    <option value="Horror">Horror</option>
                    <option value="Romantic Comedy">Romantic Comedy</option>
                    <option value="Musical">Musical</option>
                    <option value="Documentary">Documentary</option>
                    <option value="Romance">Romance</option>
                    <option value="Animation">Animation</option>
                    <option value="Science Fiction">Science Fiction</option>
                </select>
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Create Movie</button>
    </form>
</div>
