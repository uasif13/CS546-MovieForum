<div class="container">
    <div class="row">
        <div class="col-md-2">
            <form action="/edits/{{post._id}}" method="GET">
                <button class="btn btn-secondary">Edit Post</button>
            </form>

            <form action="/posts/delete/{{post._id}}" method="GET">
                <button class="btn btn-secondary" type="submit">Delete Post</button>
            </form>
        </div>
        <div class="col-md-6">
            <div class="postCard">
                <div class="card">
                    <h4>{{post.postTitle}}</h4>
                    <h6>By <a href="/users">user</a> on movie <a
                            href="/movies/detail/{{post.postMovieId}}">{{movie.title}}</a>
                        <hr>
                    </h6>
                    <h5></h5>
                    <p class="postBody">{{post.postBody}}</p>
                    <p class="likes">{{post.postLikes}} {{post.postDislikes}}</p>


                    <span class="likebtn-wrapper" data-theme="likebtn" data-identifier="item_1"></span>
                    <script>(function (d, e, s) {
                            if (d.getElementById("likebtn_wjs")) return;
                            a = d.createElement(e);
                            m = d.getElementsByTagName(e)[0];
                            a.async = 1; a.id = "likebtn_wjs"; a.src = s; m.parentNode.insertBefore(a, m)
                        })(document, "script", "//w.likebtn.com/js/w/widget.js");</script>
                </div>
            </div>

            <div>
                <div>
                    {{#each comments}}
                    <div class="container">
                        <div class="col-sm">
                            <div class="commentCard">
                                <div class="card">
                                    <p class="commentName">{{this.userName}}</p>
                                    <p>{{this.body}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

                <form action="/comments" method="POST" class="createComment">
                    <label id="titleLabel">
                        <input type="text" name="commentBody" title="body">
                    </label>
                    <input type="hidden" name="postID" value={{post._id}} />
                    <button class="btn btn-primary" type="submit">Add Comment</button>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="movieCard">
                    <h5><a href="/movies/detail/{{post.postMovieId}}">{{movie.title}}</a></h5>
                    <div><img class="img-thumbnail" src={{movie.image}} alt={{movie.title}}></div>
                    <div>
                        <p>{{movie.description}}</p>
                        <a href="/movies/{{post.postMovieId}}">See all Posts about {{movie.title}}
                            here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

