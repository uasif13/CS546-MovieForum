<h2>Search Results</h2>
<div>
    <p>Here are all the results with your search keyword {{keyword}} and data type {{type}}</p>
</div>
<div id="searchResults">
    {{#if isPost}}
    {{#each results}}
    <div class="postSearchResults">
        <ul>
            <li>{{this.postTitle}}</li>
            <li>{{this.postBody}}</li>
        </ul>
    </div>
    {{/each}}
    {{/if}}
    {{#if isMovie}}
    {{#each results}}
    <div class="movieSearchResults">
        <ul>
            <li>{{this.title}}</li>
            <li>{{this.description}}</li>
        </ul>
    </div>
    {{/each}}
    {{/if}}
    {{#if isUser}}
    {{#each results}}
    <div class="userSearchResults">
        <ul>
            <li>{{this.firstName}}</li>
            <li>{{this.lastName}}</li>
            <li>{{this.email}}</li>
            <li>{{this.username}}</li>
        </ul>
    </div>
    {{/each}}
    {{/if}}
</div>
<a href="/search" class="btn btn-primary" id="searchButton">
    Make another Search
</a>

